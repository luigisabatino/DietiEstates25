<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dietiestates25.dietiestates25.Controller.LoginController">
    <children>
        <GridPane alignment="CENTER" hgap="10" vgap="10" style="-fx-background-color: #ffffff;" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <children>
                <Button fx:id="loginWGoogleButton" text="Accedi con Google" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" prefWidth="300" onMouseClicked="loginWGoogleClicked" style="-fx-background-color: white; -fx-text-fill: black; -fx-border-color: #dcdcdc; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-padding: 10px;"/>
                <Label text="oppure:" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2" alignment="CENTER" style="-fx-font-size: 16px;" />
                <TextField promptText="Email" prefWidth="300" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <PasswordField promptText="Password" prefWidth="300" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <Hyperlink text="clicca qui per recuperare una password smarrita" GridPane.columnIndex="0" GridPane.rowIndex="6" textFill="BLUE" />
                <Button text="Login" GridPane.columnIndex="0" GridPane.rowIndex="7" prefWidth="300" style="-fx-background-color: #3B8DFF; -fx-text-fill: white; -fx-padding: 10px;" />
                <Button text="Registrati" GridPane.columnIndex="0" GridPane.rowIndex="9" prefWidth="300" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-padding: 10px;" />
                <Button text="Registra la tua azienda" GridPane.columnIndex="0" GridPane.rowIndex="10" prefWidth="300" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-padding: 10px;" />
            </children>
        </GridPane>
    </children>
</AnchorPane>